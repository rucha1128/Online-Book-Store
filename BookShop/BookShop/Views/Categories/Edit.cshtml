@model Categories

<form method="post">
    <input asp-for="id" hidden />
    <div class="form-group row">
        <h1 class="text-primary">Edit Category</h1>
        <div class="row">

            <label class="form-label mt-4" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" type="text" aria-label="default input example">
            <span asp-validation-for="Name" class="text-danger"></span>

            <label class="form-label mt-4" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" type="text" aria-label="default input example">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            
        </div>
        <div class="row pt-4">
            <div class="col">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </div>
</form>
