@model List<Products>

<div class="row pt-4">
    <div class="col-6">
        <h1 class="text-primary">Products</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Products" asp-action="AddProduct" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add Product
        </a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBM</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Title</td>
                    <td>@o.Author</td>
                    <td>@o.ISBN</td>
                    <td>@o.Price</td>
                    <td>@o.CategoryId</td>
                    <td>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@o.id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@o.id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
